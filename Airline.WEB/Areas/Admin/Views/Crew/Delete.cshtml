@model ShowCrewModel
@{
    ViewBag.Title = "Delete crew";
}

<div class="row">
    <div class="header col-12">
        <h3 class="float-left">
            @Html.ActionLink("List of crews", "List") / @ViewBag.Title
        </h3>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class=""> @Model.Id to @Model.CrewCompositionId</div>
        <div> at @Model.WorkersDescription </div>
    </div>

    <div class="form-group">
        <div>Do you really want to delete this crew?</div>
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to list", "List")
        </div>
    </div>
}