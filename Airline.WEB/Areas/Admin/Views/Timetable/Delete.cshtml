@model TimetableModel
@{
    ViewBag.Title = "Delete timetable";
}

<div class="row">
    <div class="header col-12">
        <h3 class="float-left">
            @Html.ActionLink("Datetable list", "List") / @ViewBag.Title
        </h3>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class=""> @Model.Id from @Model.FlightFromName to @Model.FlightToName</div>
        <div> at @Model.DateTime </div>
    </div>

    <div class="form-group">
        <div>Do you really want to delete this timetable item?</div>
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to list", "List")
        </div>
    </div>
}