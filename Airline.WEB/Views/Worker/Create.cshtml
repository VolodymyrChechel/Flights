@model WorkerViewModel
@{
    ViewBag.Title = "Create new worker";
}

<h2>@Html.ActionLink("List of workers", "List") / @ViewBag.Title</h2>


@if(!Html.ViewData.ModelState.IsValid)
{
    <p class="alert alert-warning">
        @Html.ValidationSummary()
    </p>
}

@using (Html.BeginForm("Create", "Worker", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(w => w.Name, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-sm-6" }})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(w => w.Surname, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control col-sm-6" }})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(w => w.BirthDate, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control col-sm-6" }})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(w => w.PhoneNumber, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control col-sm-6" }})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(w => w.CrewmanType, new { @class = "control-label col-sm-2" })

        <div class="col-sm-10">
            @Html.EnumDropDownListFor(model => model.CrewmanType, new { htmlAttributes = new { @class = "form-control col-sm-6" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Create new worker">
        </div>
    </div>
}