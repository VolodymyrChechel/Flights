@model IEnumerable<WorkerViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="text-info"> @ViewBag.Message </p>

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Birthdate</th>
        <th>Phonenumber</th>
        <th>Crewman type</th>
    </tr>
    </thead>
    @foreach (var item in @Model)
    {

        <tr class="clickable-row" data-href="@Url.Action("Edit", "Worker", new {id=item.Id})">
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.BirthDate</td>
            <td>@item.PhoneNumber</td>
            <td>@item.CrewmanType</td>
        </tr>
    }
</table>

@section Scripts{
<script>
    $(document).ready(function() {
        $(".clickable-row").click(function() {
            window.location = $(this).data("href");
        });
    });
</script>
}